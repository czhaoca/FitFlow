# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
BUILD_TARGET=development

# Database Configuration
DB_NAME=fitflow
DB_USER=fitflow
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_redis_password
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_very_long_random_string_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Port Configuration
GATEWAY_PORT=8000
GATEWAY_SSL_PORT=8443
GATEWAY_ADMIN_PORT=8001
FRONTEND_PORT=3000
BULL_DASHBOARD_PORT=3010

# OCI Configuration (Production)
OCI_S3_ENDPOINT=https://objectstorage.region.oraclecloud.com
OCI_ACCESS_KEY=your_oci_access_key
OCI_SECRET_KEY=your_oci_secret_key
OCI_REGION=ca-toronto-1
S3_BUCKET=fitflow-storage

# Cloudflare R2 Configuration (Alternative)
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY=your_r2_access_key
R2_SECRET_KEY=your_r2_secret_key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# SMS Configuration (Twilio)
SMS_API_KEY=your_twilio_api_key
SMS_API_SECRET=your_twilio_api_secret
SMS_FROM_NUMBER=+1234567890

# AI Configuration (OpenAI/Claude)
AI_API_KEY=your_ai_api_key
AI_MODEL=gpt-4

# Feature Flags
FEATURE_AI_SUMMARIES=true
FEATURE_MULTI_STUDIO=true
FEATURE_ANALYTICS=true

# Monitoring (Optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=fitflow

# Sentry (Optional)
SENTRY_DSN=your_sentry_dsn

# Stripe (Future)
STRIPE_API_KEY=your_stripe_api_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret